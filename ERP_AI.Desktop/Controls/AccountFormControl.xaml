<UserControl x:Class="ERP_AI.Desktop.Controls.AccountFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Width="200" Margin="0,4" Text="{Binding Account.Code}" />
        <TextBox Grid.Row="1" Width="200" Margin="0,4" Text="{Binding Account.Name}" />
        <ComboBox Grid.Row="2" Width="200" Margin="0,4" SelectedItem="{Binding Account.Type}">
            <ComboBoxItem Content="Asset" />
            <ComboBoxItem Content="Liability" />
            <ComboBoxItem Content="Equity" />
            <ComboBoxItem Content="Revenue" />
            <ComboBoxItem Content="Expense" />
        </ComboBox>
        <Button Grid.Row="3" Content="Save" Width="100" Margin="0,16,0,0" Command="{Binding SaveCommand}" />
    </Grid>
</UserControl>
