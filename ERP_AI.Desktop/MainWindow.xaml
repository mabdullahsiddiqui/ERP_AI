<Window x:Class="ERP_AI.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP_AI.Desktop"
        mc:Ignorable="d"
        Title="ERP_AI Desktop Pro" Height="600" Width="1000" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Top Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="Home" Click="MenuItem_Click" />
            <MenuItem Header="Accounts" Click="MenuItem_Click" />
            <MenuItem Header="Sync" Click="MenuItem_Click" />
            <MenuItem Header="Settings" Click="MenuItem_Click" />
        </Menu>
        <!-- Main Content -->
        <ContentControl x:Name="MainContent" Grid.Row="1" />
        <!-- Footer for Theme Switch -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Content="Light" Margin="4" Click="ThemeLight_Click" />
            <Button Content="Dark" Margin="4" Click="ThemeDark_Click" />
        </StackPanel>
    </Grid>
</Window>
