<UserControl x:Class="ERP_AI.Desktop.Views.AccountsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="8" Width="300" Height="32" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8,0">
            <Button Content="Delete Selected" Width="120" Margin="0,0,8,0" Command="{Binding DeleteSelectedCommand}" />
            <Button Content="Activate Selected" Width="120" Margin="0,0,8,0" Command="{Binding ActivateSelectedCommand}" />
            <Button Content="Deactivate Selected" Width="120" Margin="0,0,8,0" Command="{Binding DeactivateSelectedCommand}" />
            <Button Content="Move Selected" Width="120" Margin="0,0,8,0" Command="{Binding MoveSelectedCommand}" />
            <Button Content="Import from CSV/Excel" Width="160" Command="{Binding ImportAccountsCommand}" />
        </StackPanel>
    <ListView Grid.Row="2" Margin="8" ItemsSource="{Binding FilteredAccounts}" SelectionMode="Extended" x:Name="AccountsList" x:FieldModifier="public">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Code" DisplayMemberBinding="{Binding Code}" Width="100" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200" />
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
