<Window x:Class="ERP_AI.Desktop.Views.BankReconciliationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Bank Reconciliation" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Bank Reconciliation" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Import, match, and reconcile bank statements" Foreground="White" FontSize="14" Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Import Statement" Margin="0,0,8,0" Background="#106EBE" Click="ImportStatement_Click"/>
                    <Button Content="Auto Match" Margin="0,0,8,0" Background="#106EBE" Click="AutoMatch_Click"/>
                    <Button Content="Complete Reconciliation" Background="#28A745" Click="CompleteReconciliation_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Statement Items -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Bank Statement Items" Style="{StaticResource HeaderStyle}"/>
                    
                    <!-- Filter Controls -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="SearchTextBox" 
                                 Text="Search transactions..." 
                                 Foreground="Gray" 
                                 Margin="0,0,8,0"
                                 GotFocus="SearchTextBox_GotFocus"
                                 LostFocus="SearchTextBox_LostFocus"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        
                        <ComboBox Grid.Column="1" x:Name="StatusFilter" 
                                  SelectedIndex="0" Margin="0,0,8,0"
                                  SelectionChanged="StatusFilter_SelectionChanged">
                            <ComboBoxItem Content="All Items"/>
                            <ComboBoxItem Content="Unmatched"/>
                            <ComboBoxItem Content="Matched"/>
                            <ComboBoxItem Content="Excluded"/>
                        </ComboBox>
                        
                        <Button Grid.Column="2" Content="Clear Filters" Click="ClearFilters_Click"/>
                    </Grid>

                    <!-- Statement Items DataGrid -->
                    <DataGrid x:Name="StatementItemsGrid" 
                              Height="400"
                              AutoGenerateColumns="False"
                              SelectionChanged="StatementItemsGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                            <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="120"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C2}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding MatchStatus}" Width="100"/>
                            <DataGridTextColumn Header="Confidence" Binding="{Binding MatchConfidence, StringFormat={}{0}%}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Right Panel - Matching and Details -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Transaction Matching" Style="{StaticResource HeaderStyle}"/>
                    
                    <!-- Selected Item Details -->
                    <GroupBox Header="Selected Statement Item" Margin="0,0,0,16">
                        <StackPanel x:Name="SelectedItemDetails" Visibility="Collapsed">
                            <TextBlock x:Name="SelectedDate" Margin="0,0,0,4"/>
                            <TextBlock x:Name="SelectedDescription" Margin="0,0,0,4"/>
                            <TextBlock x:Name="SelectedAmount" Margin="0,0,0,4"/>
                            <TextBlock x:Name="SelectedReference" Margin="0,0,0,8"/>
                            
                            <Button Content="Find Matches" Click="FindMatches_Click" Margin="0,0,0,8"/>
                            <Button Content="Manual Match" Click="ManualMatch_Click" Margin="0,0,0,8"/>
                            <Button Content="Exclude Item" Click="ExcludeItem_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Match Candidates -->
                    <GroupBox Header="Match Candidates" Margin="0,0,0,16">
                        <DataGrid x:Name="MatchCandidatesGrid" 
                                  Height="200"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Transaction.Date, StringFormat=yyyy-MM-dd}" Width="80"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Transaction.Description}" Width="120"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Transaction.Amount, StringFormat=C2}" Width="80"/>
                                <DataGridTextColumn Header="Score" Binding="{Binding MatchScore, StringFormat={}{0}%}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Reconciliation Summary -->
                    <GroupBox Header="Reconciliation Summary">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Book Balance:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" x:Name="BookBalance" Text="$0.00" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Bank Balance:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" x:Name="BankBalance" Text="$0.00" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Outstanding Checks:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" x:Name="OutstandingChecks" Text="$0.00" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Outstanding Deposits:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" x:Name="OutstandingDeposits" Text="$0.00" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Separator Margin="0,8,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Reconciled Balance:" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="1" x:Name="ReconciledBalance" Text="$0.00" HorizontalAlignment="Right" FontWeight="Bold" FontSize="14"/>
                            </Grid>
                            
                            <TextBlock x:Name="DiscrepancyText" 
                                       Foreground="Red" 
                                       FontWeight="SemiBold" 
                                       Margin="0,8,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F3F2F1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="StatusText" Text="Ready" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="MatchCount" Text="0 items matched" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Grid.Column="2" Text="Bank Reconciliation v1.0" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
            </Grid>
        </Border>
    </Grid>
</Window>
