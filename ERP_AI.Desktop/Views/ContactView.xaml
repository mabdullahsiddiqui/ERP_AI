<UserControl x:Class="ERP_AI.Desktop.Views.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Customer &amp; Vendor Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Customers" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Add Customer" Command="{Binding AddCustomerCommand}" Width="120" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" AutoGenerateColumns="True" Height="150" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Edit Customer" Command="{Binding EditCustomerCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Delete Customer" Command="{Binding DeleteCustomerCommand}" Width="120"/>
            </StackPanel>
            <TextBlock Text="Vendors" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Add Vendor" Command="{Binding AddVendorCommand}" Width="120" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Vendors}" SelectedItem="{Binding SelectedVendor}" AutoGenerateColumns="True" Height="150" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Edit Vendor" Command="{Binding EditVendorCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Delete Vendor" Command="{Binding DeleteVendorCommand}" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
