<UserControl x:Class="ERP_AI.Desktop.Views.IndustryChartTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Industry Chart Templates" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <ComboBox x:Name="IndustrySelector" Width="300" Margin="0,0,0,10"/>
            <ListView x:Name="TemplateList" Height="200" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Industry" DisplayMemberBinding="{Binding Industry}" Width="150"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Import Template" Width="120" Margin="0,0,10,0"/>
                <Button Content="Export Template" Width="120" Margin="0,0,10,0"/>
                <Button Content="Create Custom Template" Width="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
