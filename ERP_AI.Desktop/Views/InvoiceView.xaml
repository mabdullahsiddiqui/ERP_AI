<UserControl x:Class="ERP_AI.Desktop.Views.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Invoice &amp; Billing System" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Invoices" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Add Invoice" Command="{Binding AddInvoiceCommand}" Width="120" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Invoices}" SelectedItem="{Binding SelectedInvoice}" AutoGenerateColumns="True" Height="150" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Edit Invoice" Command="{Binding EditInvoiceCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Delete Invoice" Command="{Binding DeleteInvoiceCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Generate PDF" Command="{Binding GeneratePdfCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Track Payment" Command="{Binding TrackPaymentCommand}" Width="120"/>
            </StackPanel>
            <TextBlock Text="Bills" FontWeight="Bold" Margin="0,10,0,5"/>
            <Button Content="Add Bill" Command="{Binding AddBillCommand}" Width="120" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Bills}" SelectedItem="{Binding SelectedBill}" AutoGenerateColumns="True" Height="150" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Edit Bill" Command="{Binding EditBillCommand}" Width="120" Margin="0,0,10,0"/>
                <Button Content="Delete Bill" Command="{Binding DeleteBillCommand}" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
