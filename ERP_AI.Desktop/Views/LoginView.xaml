<Window x:Class="ERP_AI.Desktop.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:ERP_AI.Desktop.Converters"
        Title="ERP AI - Login"
        Width="450"
        Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark2}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#f8fafc" Offset="0"/>
                <GradientStop Color="#e2e8f0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <StackPanel Margin="40" VerticalAlignment="Center">
            
            <!-- Logo and Title -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                <Ellipse Width="80" Height="80" Margin="0,0,0,20">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{DynamicResource SystemAccentColor}" Offset="0"/>
                            <GradientStop Color="{DynamicResource SystemAccentColorDark1}" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="ERP AI" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="{DynamicResource SystemAccentColor}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Enterprise Resource Planning" 
                          FontSize="14" 
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel>
                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Email Address" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBox x:Name="EmailTextBox"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TabIndex="1"/>
                    <TextBlock Text="{Binding EmailError}" 
                              Foreground="Red" 
                              FontSize="12" 
                              Margin="0,4,0,0"
                              Visibility="{Binding HasEmailError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Password" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            <PasswordBox x:Name="PasswordBox"
                                       Style="{StaticResource ModernPasswordBoxStyle}"
                                       TabIndex="2"/>
                    <TextBlock Text="{Binding PasswordError}" 
                              Foreground="Red" 
                              FontSize="12" 
                              Margin="0,4,0,0"
                              Visibility="{Binding HasPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Remember Me -->
                <CheckBox x:Name="RememberMeCheckBox"
                         IsChecked="{Binding RememberMe}"
                         Content="Remember me"
                         Margin="0,0,0,20"
                         FontSize="14"
                         Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessageText"
                          Text="{Binding ErrorMessage}"
                          Foreground="Red"
                          FontSize="14"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"
                          Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                       Content="Sign In"
                       Style="{StaticResource ModernButtonStyle}"
                       Command="{Binding LoginCommand}"
                       IsDefault="True"
                       TabIndex="3"
                       Margin="0,0,0,20"/>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,0,20">
                    <ui:ProgressRing Width="20" Height="20" IsActive="True" Margin="0,0,10,0"/>
                    <TextBlock Text="Signing in..." 
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>

                <!-- Divider -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                    <Line Stroke="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                          StrokeThickness="1" 
                          Stretch="Uniform"/>
                    <TextBlock Text="or" 
                              Margin="10,0" 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              VerticalAlignment="Center"/>
                    <Line Stroke="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                          StrokeThickness="1" 
                          Stretch="Uniform"/>
                </StackPanel>

                <!-- Register Link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account? " 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    <Button Content="Sign Up" 
                           Style="{StaticResource {x:Type Button}}"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="{DynamicResource SystemAccentColor}"
                           FontWeight="SemiBold"
                           Command="{Binding NavigateToRegisterCommand}"
                           Padding="0,0,0,0"/>
                </StackPanel>

                <!-- Forgot Password -->
                <Button Content="Forgot Password?" 
                       Style="{StaticResource {x:Type Button}}"
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="{DynamicResource SystemAccentColor}"
                       FontSize="12"
                       Command="{Binding ForgotPasswordCommand}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Demo Credentials Section -->
            <Border Background="#f0f9ff" 
                    BorderBrush="#0ea5e9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,30,0,0" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Demo Credentials" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Foreground="#0c4a6e" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="For testing purposes, use these credentials:" 
                              FontSize="12" 
                              Foreground="#0c4a6e" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Email Credential -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Email:" 
                                      FontWeight="SemiBold" 
                                      FontSize="12" 
                                      Foreground="#0c4a6e" 
                                      Margin="0,0,0,5"/>
                            <Border Background="White" 
                                    BorderBrush="#0ea5e9" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4">
                                <TextBlock Text="admin@erpai.com" 
                                          FontFamily="Consolas" 
                                          FontSize="11" 
                                          Foreground="#0c4a6e"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Password Credential -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Password:" 
                                      FontWeight="SemiBold" 
                                      FontSize="12" 
                                      Foreground="#0c4a6e" 
                                      Margin="0,0,0,5"/>
                            <Border Background="White" 
                                    BorderBrush="#0ea5e9" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4">
                                <TextBlock Text="password123" 
                                          FontFamily="Consolas" 
                                          FontSize="11" 
                                          Foreground="#0c4a6e"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    
                    <Button Content="Fill Demo Credentials" 
                           Background="#0ea5e9" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="12,6" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0" 
                           Click="FillDemoCredentials_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar VerticalAlignment="Bottom" Background="Transparent">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" 
                            Fill="{Binding IsOnline, Converter={StaticResource BooleanToBrushConverter}}"
                            Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                              FontSize="12"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
