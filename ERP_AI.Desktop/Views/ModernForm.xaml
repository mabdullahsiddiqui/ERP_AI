<UserControl x:Class="ERP_AI.Desktop.Views.ModernForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style x:Key="FormFieldStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </Style>
        
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="FormButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource FormButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource FormButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
        
        <Style x:Key="SuccessTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                Padding="24,16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="FormTitle" Text="Form Title" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="FormSubtitle" Text="Form subtitle and description" 
                              FontSize="14" Foreground="White" Opacity="0.8" Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="AutoSaveStatus" Text="Auto-saved" FontSize="12" 
                              Foreground="White" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Ellipse x:Name="AutoSaveIndicator" Width="8" Height="8" Fill="Green" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    
                    <!-- Basic Information -->
                    <TextBlock Text="Basic Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Name *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        <TextBlock x:Name="NameError" Text="" Style="{StaticResource ErrorTextStyle}" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Type *" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox x:Name="TypeComboBox" Style="{StaticResource FormComboBoxStyle}">
                            <ComboBoxItem Content="Customer"/>
                            <ComboBoxItem Content="Vendor"/>
                            <ComboBoxItem Content="Employee"/>
                        </ComboBox>
                        <TextBlock x:Name="TypeError" Text="" Style="{StaticResource ErrorTextStyle}" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Email" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        <TextBlock x:Name="EmailError" Text="" Style="{StaticResource ErrorTextStyle}" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Phone" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        <TextBlock x:Name="PhoneError" Text="" Style="{StaticResource ErrorTextStyle}" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <!-- Address Information -->
                    <TextBlock Text="Address Information" FontSize="18" FontWeight="Bold" Margin="0,24,0,16"/>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Address Line 1" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="Address1TextBox" Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Address Line 2" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="Address2TextBox" Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                    
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="City" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="CityTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="State" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="StateTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Postal Code" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="PostalCodeTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Country" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="CountryComboBox" Style="{StaticResource FormComboBoxStyle}">
                                <ComboBoxItem Content="United States"/>
                                <ComboBoxItem Content="Canada"/>
                                <ComboBoxItem Content="United Kingdom"/>
                                <ComboBoxItem Content="Australia"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    
                    <!-- Financial Information -->
                    <TextBlock Text="Financial Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Credit Limit" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="CreditLimitTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        <TextBlock Text="Enter the maximum credit amount for this customer" 
                                  FontSize="11" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Payment Terms" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox x:Name="PaymentTermsComboBox" Style="{StaticResource FormComboBoxStyle}">
                            <ComboBoxItem Content="Net 15"/>
                            <ComboBoxItem Content="Net 30"/>
                            <ComboBoxItem Content="Net 45"/>
                            <ComboBoxItem Content="Net 60"/>
                            <ComboBoxItem Content="Due on Receipt"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Tax ID" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="TaxIdTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Additional Information -->
                    <TextBlock Text="Additional Information" FontSize="18" FontWeight="Bold" Margin="0,24,0,16"/>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Notes" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="NotesTextBox" Style="{StaticResource FormTextBoxStyle}" 
                                Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <TextBlock Text="Tags" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="TagsTextBox" Style="{StaticResource FormTextBoxStyle}"/>
                        <TextBlock Text="Separate multiple tags with commas" 
                                  FontSize="11" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Status Information -->
                    <TextBlock Text="Status" FontSize="18" FontWeight="Bold" Margin="0,24,0,16"/>
                    
                    <StackPanel Style="{StaticResource FormFieldStyle}">
                        <CheckBox x:Name="IsActiveCheckBox" Content="Active" IsChecked="True" Margin="0,0,0,8"/>
                        <CheckBox x:Name="EmailNotificationsCheckBox" Content="Email Notifications" IsChecked="True" Margin="0,0,0,8"/>
                        <CheckBox x:Name="AutoRemindersCheckBox" Content="Auto Reminders" IsChecked="False"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Form Actions -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                BorderThickness="0,1,0,0" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="ValidationStatus" Text="Form is valid" 
                              Style="{StaticResource SuccessTextStyle}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel" Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Save Draft" Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Save" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
