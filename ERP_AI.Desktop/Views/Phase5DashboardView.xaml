<Window x:Class="ERP_AI.Desktop.Views.Phase5DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ERP_AI Desktop Pro - Phase 5: Advanced Features &amp; Polish" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- SubHeader Style -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#605E5C"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Feature Button Style -->
        <Style x:Key="FeatureButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- KPI Card Style -->
        <Style x:Key="KPICardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="5" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ERP_AI Desktop Pro" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Phase 5: Advanced Features &amp; Polish - Professional ERP Solution" Foreground="White" FontSize="16" Opacity="0.9"/>
                </StackPanel>
                
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Content="📊 Reports" Margin="0,0,8,0" Background="#6F42C1" Click="OpenReports_Click"/>
            <Button Content="👤 Profile" Margin="0,0,8,0" Background="#20C997" Click="OpenProfile_Click"/>
            <Button Content="👥 Users" Margin="0,0,8,0" Background="#E83E8C" Click="OpenUserManagement_Click"/>
            <Button Content="⚙️ Settings" Margin="0,0,8,0" Background="#6C757D" Click="OpenSettings_Click"/>
            <Button Content="Run Tests" Margin="0,0,8,0" Background="#28A745" Click="RunTests_Click"/>
            <Button Content="Performance" Margin="0,0,8,0" Background="#FFC107" Foreground="Black" Click="Performance_Click"/>
            <Button Content="Export Report" Background="#17A2B8" Click="ExportReport_Click"/>
        </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- KPI Summary -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="System Performance &amp; Health" Style="{StaticResource HeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Style="{StaticResource KPICardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Database Performance" FontWeight="SemiBold" FontSize="12" Foreground="#605E5C"/>
                                    <TextBlock Text="98.5%" FontSize="20" FontWeight="Bold" Foreground="#28A745"/>
                                    <TextBlock Text="Query Response Time" FontSize="10" Foreground="#605E5C"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Style="{StaticResource KPICardStyle}">
                                <StackPanel>
                                    <TextBlock Text="UI Responsiveness" FontWeight="SemiBold" FontSize="12" Foreground="#605E5C"/>
                                    <TextBlock Text="99.2%" FontSize="20" FontWeight="Bold" Foreground="#28A745"/>
                                    <TextBlock Text="Frame Rate" FontSize="10" Foreground="#605E5C"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Style="{StaticResource KPICardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Sync Performance" FontWeight="SemiBold" FontSize="12" Foreground="#605E5C"/>
                                    <TextBlock Text="95.8%" FontSize="20" FontWeight="Bold" Foreground="#17A2B8"/>
                                    <TextBlock Text="Success Rate" FontSize="10" Foreground="#605E5C"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="3" Style="{StaticResource KPICardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Memory Usage" FontWeight="SemiBold" FontSize="12" Foreground="#605E5C"/>
                                    <TextBlock Text="156 MB" FontSize="20" FontWeight="Bold" Foreground="#FFC107"/>
                                    <TextBlock Text="Peak Usage" FontSize="10" Foreground="#605E5C"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="4" Style="{StaticResource KPICardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Test Coverage" FontWeight="SemiBold" FontSize="12" Foreground="#605E5C"/>
                                    <TextBlock Text="94.3%" FontSize="20" FontWeight="Bold" Foreground="#28A745"/>
                                    <TextBlock Text="Code Coverage" FontSize="10" Foreground="#605E5C"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Advanced Accounting Features -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Advanced Accounting Features" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Professional-grade accounting tools for enterprise-level financial management." Style="{StaticResource DescriptionStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Bank Reconciliation -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Bank Reconciliation System" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Import statements, auto-match transactions, and reconcile accounts with advanced algorithms." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Import CSV" Click="FeatureButton_Click" Tag="ImportCSV" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Import QIF" Click="FeatureButton_Click" Tag="ImportQIF" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Import OFX" Click="FeatureButton_Click" Tag="ImportOFX" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Auto Match" Click="FeatureButton_Click" Tag="AutoMatch" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Manual Match" Click="FeatureButton_Click" Tag="ManualMatch" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Reconciliation Report" Click="FeatureButton_Click" Tag="ReconciliationReport" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <!-- Cash Flow Management -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Cash Flow Management" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Forecast cash flows, optimize payment schedules, and analyze working capital." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Cash Forecast" Click="FeatureButton_Click" Tag="CashForecast" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Payment Schedule" Click="FeatureButton_Click" Tag="PaymentSchedule" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Working Capital" Click="FeatureButton_Click" Tag="WorkingCapital" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Liquidity Plan" Click="FeatureButton_Click" Tag="LiquidityPlan" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Cash Position" Click="FeatureButton_Click" Tag="CashPosition" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Timing Analysis" Click="FeatureButton_Click" Tag="TimingAnalysis" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Budgeting & Forecasting -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Budgeting &amp; Forecasting" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Comprehensive budgeting tools with variance analysis and rolling forecasts." Style="{StaticResource DescriptionStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Budget Management -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Budget Management" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Create, manage, and track budgets with detailed variance analysis." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Create Budget" Click="FeatureButton_Click" Tag="CreateBudget" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Budget vs Actual" Click="FeatureButton_Click" Tag="BudgetVsActual" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Variance Analysis" Click="FeatureButton_Click" Tag="VarianceAnalysis" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Department Budget" Click="FeatureButton_Click" Tag="DepartmentBudget" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Project Budget" Click="FeatureButton_Click" Tag="ProjectBudget" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Budget Alerts" Click="FeatureButton_Click" Tag="BudgetAlerts" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <!-- Forecasting -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Advanced Forecasting" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Rolling forecasts, scenario planning, and predictive analytics." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Rolling Forecast" Click="FeatureButton_Click" Tag="RollingForecast" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Scenario Planning" Click="FeatureButton_Click" Tag="ScenarioPlanning" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Trend Analysis" Click="FeatureButton_Click" Tag="TrendAnalysis" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Seasonal Adjust" Click="FeatureButton_Click" Tag="SeasonalAdjust" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Budget Templates" Click="FeatureButton_Click" Tag="BudgetTemplates" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Forecast Accuracy" Click="FeatureButton_Click" Tag="ForecastAccuracy" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Advanced Transaction Features -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Advanced Transaction Features" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Automated transaction processing with templates, workflows, and categorization." Style="{StaticResource DescriptionStyle}"/>
                        
                        <WrapPanel Margin="0,10,0,0">
                            <Button Content="Recurring Transactions" Click="FeatureButton_Click" Tag="RecurringTransactions" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Transaction Templates" Click="FeatureButton_Click" Tag="TransactionTemplates" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Batch Processing" Click="FeatureButton_Click" Tag="BatchProcessing" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Approval Workflows" Click="FeatureButton_Click" Tag="ApprovalWorkflows" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Auto Categorization" Click="FeatureButton_Click" Tag="AutoCategorization" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Transaction Splitting" Click="FeatureButton_Click" Tag="TransactionSplitting" Style="{StaticResource FeatureButtonStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Multi-Currency & Project Costing -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Multi-Currency &amp; Project Costing" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Global business support with multi-currency transactions and project profitability analysis." Style="{StaticResource DescriptionStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Multi-Currency -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Multi-Currency Support" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Handle multiple currencies with real-time exchange rates and conversion." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Currency Setup" Click="FeatureButton_Click" Tag="CurrencySetup" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Exchange Rates" Click="FeatureButton_Click" Tag="ExchangeRates" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Multi-Currency TX" Click="FeatureButton_Click" Tag="MultiCurrencyTX" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="FX Gain/Loss" Click="FeatureButton_Click" Tag="FXGainLoss" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Currency Reports" Click="FeatureButton_Click" Tag="CurrencyReports" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <!-- Project Costing -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Project/Job Costing" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Track project costs, time, and profitability with detailed analysis." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Project Setup" Click="FeatureButton_Click" Tag="ProjectSetup" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Time Tracking" Click="FeatureButton_Click" Tag="TimeTracking" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Expense Tracking" Click="FeatureButton_Click" Tag="ExpenseTracking" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Profitability" Click="FeatureButton_Click" Tag="Profitability" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Job Reports" Click="FeatureButton_Click" Tag="JobReports" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Performance & Testing -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Performance Optimization &amp; Testing" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Comprehensive testing framework and performance optimization for enterprise deployment." Style="{StaticResource DescriptionStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Performance -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Performance Optimization" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Database, UI, and sync performance optimization with monitoring." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="DB Optimization" Click="FeatureButton_Click" Tag="DBOptimization" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="UI Virtualization" Click="FeatureButton_Click" Tag="UIVirtualization" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Sync Performance" Click="FeatureButton_Click" Tag="SyncPerformance" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Memory Management" Click="FeatureButton_Click" Tag="MemoryManagement" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Background Tasks" Click="FeatureButton_Click" Tag="BackgroundTasks" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <!-- Testing -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Testing Framework" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="Comprehensive testing with unit, integration, and performance tests." Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <Button Content="Unit Tests" Click="FeatureButton_Click" Tag="UnitTests" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Integration Tests" Click="FeatureButton_Click" Tag="IntegrationTests" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="UI Tests" Click="FeatureButton_Click" Tag="UITests" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Performance Tests" Click="FeatureButton_Click" Tag="PerformanceTests" Style="{StaticResource FeatureButtonStyle}"/>
                                    <Button Content="Test Reports" Click="FeatureButton_Click" Tag="TestReports" Style="{StaticResource FeatureButtonStyle}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Security & Quality -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Advanced Security &amp; Quality Assurance" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Enterprise-grade security with role management, audit trails, and quality controls." Style="{StaticResource DescriptionStyle}"/>
                        
                        <WrapPanel Margin="0,10,0,0">
                            <Button Content="User Roles" Click="FeatureButton_Click" Tag="UserRoles" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Permissions" Click="FeatureButton_Click" Tag="Permissions" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Audit Trail" Click="FeatureButton_Click" Tag="AuditTrail" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Data Encryption" Click="FeatureButton_Click" Tag="DataEncryption" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Session Management" Click="FeatureButton_Click" Tag="SessionManagement" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Password Policy" Click="FeatureButton_Click" Tag="PasswordPolicy" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Code Review" Click="FeatureButton_Click" Tag="CodeReview" Style="{StaticResource FeatureButtonStyle}"/>
                            <Button Content="Quality Metrics" Click="FeatureButton_Click" Tag="QualityMetrics" Style="{StaticResource FeatureButtonStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F3F2F1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding FeatureCount}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Grid.Column="2" Text="ERP_AI Desktop Pro v2.0" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
            </Grid>
        </Border>
    </Grid>
</Window>
