<Window x:Class="ERP_AI.Desktop.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:ERP_AI.Desktop.Converters"
        Title="ERP AI - Create Account"
        Width="500"
        Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark2}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#f8fafc" Offset="0"/>
                <GradientStop Color="#e2e8f0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- ScrollViewer for the form -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40" VerticalAlignment="Top">
                
                <!-- Logo and Title -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Ellipse Width="60" Height="60" Margin="0,0,0,15">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{DynamicResource SystemAccentColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource SystemAccentColorDark1}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Create Account" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="{DynamicResource SystemAccentColor}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Join ERP AI and streamline your business" 
                              FontSize="14" 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Registration Form -->
                <StackPanel>
                    
                    <!-- Personal Information Section -->
                    <TextBlock Text="Personal Information" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

                    <!-- First Name and Last Name -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="First Name" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8"
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            <TextBox x:Name="FirstNameTextBox"
                                    Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    TabIndex="1"/>
                            <TextBlock Text="{Binding FirstNameError}" 
                                      Foreground="Red" 
                                      FontSize="12" 
                                      Margin="0,4,0,0"
                                      Visibility="{Binding HasFirstNameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Last Name" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8"
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            <TextBox x:Name="LastNameTextBox"
                                    Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    TabIndex="2"/>
                            <TextBlock Text="{Binding LastNameError}" 
                                      Foreground="Red" 
                                      FontSize="12" 
                                      Margin="0,4,0,0"
                                      Visibility="{Binding HasLastNameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Email Field -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Email Address" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <TextBox x:Name="EmailTextBox"
                                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                TabIndex="3"/>
                        <TextBlock Text="{Binding EmailError}" 
                                  Foreground="Red" 
                                  FontSize="12" 
                                  Margin="0,4,0,0"
                                  Visibility="{Binding HasEmailError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Phone Number -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Phone Number (Optional)" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <TextBox x:Name="PhoneNumberTextBox"
                                Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                TabIndex="4"/>
                    </StackPanel>

                    <!-- Company Information Section -->
                    <TextBlock Text="Company Information" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

                    <!-- Company Name -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Company Name" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <TextBox x:Name="CompanyNameTextBox"
                                Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                TabIndex="5"/>
                        <TextBlock Text="{Binding CompanyNameError}" 
                                  Foreground="Red" 
                                  FontSize="12" 
                                  Margin="0,4,0,0"
                                  Visibility="{Binding HasCompanyNameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Security Section -->
                    <TextBlock Text="Security" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

                    <!-- Password Field -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Password" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                    <PasswordBox x:Name="PasswordBox"
                                               Style="{StaticResource ModernPasswordBoxStyle}"
                                               TabIndex="6"/>
                        <TextBlock Text="{Binding PasswordError}" 
                                  Foreground="Red" 
                                  FontSize="12" 
                                  Margin="0,4,0,0"
                                  Visibility="{Binding HasPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Confirm Password Field -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Confirm Password" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                    <PasswordBox x:Name="ConfirmPasswordBox"
                                               Style="{StaticResource ModernPasswordBoxStyle}"
                                               TabIndex="7"/>
                        <TextBlock Text="{Binding ConfirmPasswordError}" 
                                  Foreground="Red" 
                                  FontSize="12" 
                                  Margin="0,4,0,0"
                                  Visibility="{Binding HasConfirmPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Terms and Conditions -->
                    <CheckBox x:Name="AcceptTermsCheckBox"
                             IsChecked="{Binding AcceptTerms}"
                             Margin="0,0,0,20">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="I agree to the "/>
                            <Hyperlink Command="{Binding ViewTermsCommand}">
                                <Run Text="Terms of Service"/>
                            </Hyperlink>
                            <Run Text=" and "/>
                            <Hyperlink Command="{Binding ViewPrivacyCommand}">
                                <Run Text="Privacy Policy"/>
                            </Hyperlink>
                        </TextBlock>
                    </CheckBox>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessageText"
                              Text="{Binding ErrorMessage}"
                              Foreground="Red"
                              FontSize="14"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"
                              Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Register Button -->
                    <Button x:Name="RegisterButton"
                           Content="Create Account"
                           Style="{StaticResource ModernButtonStyle}"
                           Command="{Binding RegisterCommand}"
                           IsDefault="True"
                           TabIndex="8"
                           Margin="0,0,0,20"/>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="0,0,0,20">
                        <ui:ProgressRing Width="20" Height="20" IsActive="True" Margin="0,0,10,0"/>
                        <TextBlock Text="Creating account..." 
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>

                    <!-- Divider -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                        <Line Stroke="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                              StrokeThickness="1" 
                              Stretch="Uniform"/>
                        <TextBlock Text="or" 
                                  Margin="10,0" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  VerticalAlignment="Center"/>
                        <Line Stroke="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                              StrokeThickness="1" 
                              Stretch="Uniform"/>
                    </StackPanel>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Already have an account? " 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <Button Content="Sign In" 
                               Style="{StaticResource {x:Type Button}}"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="{DynamicResource SystemAccentColor}"
                               FontWeight="SemiBold"
                               Command="{Binding NavigateToLoginCommand}"
                               Padding="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar VerticalAlignment="Bottom" Background="Transparent">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" 
                            Fill="{Binding IsOnline, Converter={StaticResource BooleanToBrushConverter}}"
                            Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                              FontSize="12"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
