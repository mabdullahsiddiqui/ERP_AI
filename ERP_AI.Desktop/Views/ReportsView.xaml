<UserControl x:Class="ERP_AI.Desktop.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style x:Key="ReportCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ReportButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                Padding="24,16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Reports &amp; Analytics" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Generate comprehensive financial and business reports" 
                          FontSize="14" Foreground="White" Opacity="0.8" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Report Categories -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    
                    <!-- Financial Reports -->
                    <Border Style="{StaticResource ReportCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Financial Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Grid.Column="0" Content="Profit &amp; Loss Statement" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,8"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="Balance Sheet" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,8"/>
                                
                                <Button Grid.Row="1" Grid.Column="0" Content="Cash Flow Statement" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,8"/>
                                <Button Grid.Row="1" Grid.Column="1" Content="Trial Balance" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,8"/>
                                
                                <Button Grid.Row="2" Grid.Column="0" Content="General Ledger" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,0"/>
                                <Button Grid.Row="2" Grid.Column="1" Content="Account Activity" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Management Reports -->
                    <Border Style="{StaticResource ReportCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Management Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Grid.Column="0" Content="A/R Aging Report" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,8"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="A/P Aging Report" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,8"/>
                                
                                <Button Grid.Row="1" Grid.Column="0" Content="Customer List" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,8"/>
                                <Button Grid.Row="1" Grid.Column="1" Content="Vendor List" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,8"/>
                                
                                <Button Grid.Row="2" Grid.Column="0" Content="Inventory Valuation" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,0"/>
                                <Button Grid.Row="2" Grid.Column="1" Content="Budget vs Actual" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Tax Reports -->
                    <Border Style="{StaticResource ReportCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Tax Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Grid.Column="0" Content="Sales Tax Report" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,8"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="1099 Preparation" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,8"/>
                                
                                <Button Grid.Row="1" Grid.Column="0" Content="Payroll Tax Report" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="0,0,8,0"/>
                                <Button Grid.Row="1" Grid.Column="1" Content="Year-End Package" 
                                       Style="{StaticResource ReportButtonStyle}" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Custom Reports -->
                    <Border Style="{StaticResource ReportCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Custom Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
                            
                            <Button Content="Report Builder" Style="{StaticResource ReportButtonStyle}" 
                                   Margin="0,0,0,8" Background="Purple"/>
                            <Button Content="Saved Reports" Style="{StaticResource ReportButtonStyle}" 
                                   Margin="0,0,0,8" Background="DarkBlue"/>
                            <Button Content="Scheduled Reports" Style="{StaticResource ReportButtonStyle}" 
                                   Background="DarkGreen"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Quick Actions &amp; Recent Reports -->
                <StackPanel Grid.Column="1">
                    
                    <!-- Quick Actions -->
                    <Border Style="{StaticResource ReportCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <Button Content="Generate All Financials" Style="{StaticResource ReportButtonStyle}" 
                                   Margin="0,0,0,8" Background="Green"/>
                            <Button Content="Export to PDF" Style="{StaticResource ReportButtonStyle}" 
                                   Margin="0,0,0,8" Background="Orange"/>
                            <Button Content="Email Reports" Style="{StaticResource ReportButtonStyle}" 
                                   Margin="0,0,0,8" Background="Blue"/>
                            <Button Content="Print Reports" Style="{StaticResource ReportButtonStyle}" 
                                   Background="DarkRed"/>
                        </StackPanel>
                    </Border>

                    <!-- Recent Reports -->
                    <Border Style="{StaticResource ReportCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Recent Reports" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <StackPanel>
                                <TextBlock Text="P&amp;L Statement - Dec 2024" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="Generated 2 hours ago" FontSize="10" Opacity="0.7" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Balance Sheet - Dec 2024" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="Generated 1 day ago" FontSize="10" Opacity="0.7" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="A/R Aging - Dec 2024" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="Generated 2 days ago" FontSize="10" Opacity="0.7" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Cash Flow - Dec 2024" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="Generated 3 days ago" FontSize="10" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Report Settings -->
                    <Border Style="{StaticResource ReportCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Report Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <StackPanel>
                                <CheckBox Content="Auto-save reports" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Include charts" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Show zero amounts" IsChecked="False" Margin="0,0,0,8"/>
                                <CheckBox Content="Include footnotes" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Email notifications" IsChecked="False"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
