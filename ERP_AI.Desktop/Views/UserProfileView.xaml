<Window x:Class="ERP_AI.Desktop.Views.UserProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:ERP_AI.Desktop.Converters"
        Title="User Profile - ERP AI"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="User Profile" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource SystemAccentColor}"/>
            <TextBlock Text="Manage your account information and preferences" 
                       FontSize="14" 
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Personal Information Section -->
                <TextBlock Text="Personal Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="First Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="FirstNameTextBox"
                                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Text="{Binding FirstNameError}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding HasFirstNameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Last Name -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Last Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="LastNameTextBox"
                                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Text="{Binding LastNameError}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding HasLastNameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                        <TextBlock Text="Email Address" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="EmailTextBox"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Text="{Binding EmailError}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding HasEmailError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Phone Number -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,10,10,0">
                        <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PhoneNumberTextBox"
                                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Company -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,10,0,0">
                        <TextBlock Text="Company" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="CompanyTextBox"
                                 Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Security Section -->
                <TextBlock Text="Security" Style="{StaticResource SectionHeaderStyle}"/>
                
                <StackPanel>
                    <!-- Current Password -->
                    <TextBlock Text="Current Password" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="CurrentPasswordBox"
                                 Style="{StaticResource ModernPasswordBoxStyle}"/>
                    <TextBlock Text="{Binding CurrentPasswordError}"
                               Foreground="Red"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="{Binding HasCurrentPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- New Password -->
                    <TextBlock Text="New Password" Style="{StaticResource LabelStyle}" Margin="0,15,0,0"/>
                    <PasswordBox x:Name="NewPasswordBox"
                                 Style="{StaticResource ModernPasswordBoxStyle}"/>
                    <TextBlock Text="{Binding NewPasswordError}"
                               Foreground="Red"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="{Binding HasNewPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Confirm New Password -->
                    <TextBlock Text="Confirm New Password" Style="{StaticResource LabelStyle}" Margin="0,15,0,0"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Style="{StaticResource ModernPasswordBoxStyle}"/>
                    <TextBlock Text="{Binding ConfirmPasswordError}"
                               Foreground="Red"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="{Binding HasConfirmPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Preferences Section -->
                <TextBlock Text="Preferences" Style="{StaticResource SectionHeaderStyle}"/>
                
                <StackPanel>
                    <!-- Theme -->
                    <TextBlock Text="Theme" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="ThemeComboBox"
                              SelectedItem="{Binding SelectedTheme}"
                              Style="{StaticResource {x:Type ComboBox}}"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="System"/>
                    </ComboBox>

                    <!-- Language -->
                    <TextBlock Text="Language" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="LanguageComboBox"
                              SelectedItem="{Binding SelectedLanguage}"
                              Style="{StaticResource {x:Type ComboBox}}"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Spanish"/>
                        <ComboBoxItem Content="French"/>
                    </ComboBox>

                    <!-- Notifications -->
                    <CheckBox Content="Enable email notifications" 
                              IsChecked="{Binding EmailNotifications}"
                              Margin="0,0,0,5"/>
                    <CheckBox Content="Enable push notifications" 
                              IsChecked="{Binding PushNotifications}"
                              Margin="0,0,0,5"/>
                    <CheckBox Content="Enable security alerts" 
                              IsChecked="{Binding SecurityAlerts}"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="14"
                           Margin="0,20,0,0"
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                           TextWrapping="Wrap"/>

                <!-- Success Message -->
                <TextBlock Text="{Binding SuccessMessage}"
                           Foreground="Green"
                           FontSize="14"
                           Margin="0,20,0,0"
                           Visibility="{Binding HasSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Style="{StaticResource {x:Type Button}}"
                    Margin="0,0,10,0"
                    Padding="20,12"/>
            <Button Content="Save Changes" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Change Password" 
                    Command="{Binding ChangePasswordCommand}"
                    Style="{StaticResource {x:Type Button}}"
                    Padding="20,12"/>
        </StackPanel>
    </Grid>
</Window>
